<aura:component implements="flexipage:availableForAllPageTypes">
    <aura:attribute name="message" type="String"></aura:attribute>
    <lightning:card title="Aura to LWC communication">
        <div class="slds-var-p-around_medium">
            <div>{!v.message}</div>
        </div>
        <div class="slds-var-p-around_medium">
            <c:lwcAuraCommunication onsentmessageevent="{!c.handleMessage}" title="Hello this message is from Aura"></c:lwcAuraCommunication>
        </div>
    </lightning:card>
</aura:component>	